function _draw()
 map(0,0)
 local by=72
 for y=1,b.h do
  local bx=24
  for x=1,b.w do
   spr(b.grid[y][x],bx,
    by-b.yoffs[y][x])
   bx+=8
  end
  by+=8
 end
 spr(b:curs(),16+8*b.cx,64+8*b.cy,
   1,1,b.cf)
 t=t+1
 palt(0x0040)
 spr(f[1+((t\4)%4)],8+8*b.cx,56,2,2)
 palt()
 --rectfill(0,0,32,7,0)
 --print(100*stat(1).."%",0,0,7)
end
