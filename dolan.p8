b={}
function init_board()
 b={
  w=10,
  h=7,
  cursor_sids={9,10,11,12,12,11,10},
  cst=0,
  cx=1,
  cy=1,
  cf=0,
  gem_sids={5,21,37,53},
  empty_sid=16,
  grid={},
  yoffs={},
  selecting=false,
  settling=false,
  clampx=function(this,x)
   return max(1,min(this.w,x))
  end,
  clampy=function(this,y)
   return max(1,min(this.h,y))
  end,
  curs=function(this)
   if this.selecting then
    this.cst=1+this.cst%7
    this.cf=this.cst>4
    return this.cursor_sids[this.cst]
   else
    this.cst=0
    return this.cursor_sids[1]
   end
  end,
 }
 -- populate grid
 for y=1,b.h do
  local row={}
  local yoffs={}
  for x=1,b.w do
   add(row,rnd(b.gem_sids))
   add(yoffs,0)
  end
  add(b.grid,row)
  add(b.yoffs,yoffs)
 end
 -- iterate until no matches
 while clear_matches(true)>0 do
  b.settling=false
  for y=1,b.h do
   for x=1,b.w do
    b.yoffs[y][x]=0
    if b.grid[y][x]==b.empty_sid then
     b.grid[y][x]=rnd(b.gem_sids)
    end
   end
  end
 end
end

-- returns the number of matches
function clear_matches(skip_fx)
 local mtotal=0
 for y=1,b.h do
  local row=b.grid[y]
  for x=1,b.w do
   local s=row[x]
   if s==b.empty_sid then goto match_end end
   local n=1 -- find x match
   for mx=x+1,b.w do
    if row[mx]~=s then
     break
    end
    n+=1
   end
   if n>=3 then -- x matched
    mtotal+=1
    for mx=x,x+n-1 do
     row[mx]=b.empty_sid
    end
   end
   n=1 -- find y match
   for my=y+1,b.h do
    if b.grid[my][x]~=s then
     break
    end
    n+=1
   end
   if n>=3 then -- y matched
    mtotal+=1
    for my=y,y+n-1 do
     b.grid[my][x]=b.empty_sid
    end
   end
   ::match_end::
   end
 end
 if mtotal>0 then
  if not skip_fx then
   sfx(s_dope1,0)
  end
  b.settling=true
 end
 return mtotal
end

function settle_grid()
 if b.settling then
  local scount=0
  for y=1,b.h do
   for x=1,b.w do
    if b.grid[y][x]~=b.empty_sid
       and b.yoffs[y][x]==0 then
     if y<b.h and
        b.grid[y+1][x]==b.empty_sid then
      b.grid[y+1][x]=b.grid[y][x]
      b.grid[y][x]=b.empty_sid
      b.yoffs[y+1][x]=7
      scount+=1
     end
    elseif b.yoffs[y][x]>0 then
     b.yoffs[y][x]-=1
     scount+=1
    end
   end
  end
  if scount==0 then
   b.settling=false
   clear_matches()
  end
 end
end

function _init()
 cls(0)
 init_board()
end

function _update60()
 settle_grid()
 -- update cursor
 if btnp(🅾️) then
  if not b.selecting
    and not b.settling
    and b.grid[b.cy][b.cx]~=b.empty_sid then
   sfx(s_select,0)
   b.selecting=true
  elseif b.selecting then
   b.selecting=false
   sfx(s_cancel,0)
  end
 end
 local dx,dy=0,0
 if btnp(⬆️) then dy-=1 end
 if btnp(⬇️) then dy+=1 end
 if btnp(⬅️) then dx-=1 end
 if btnp(➡️) then dx+=1 end
 local cx2=b:clampx(b.cx+dx)
 local cy2=b:clampy(b.cy+dy)
 if cx2~=b.cx or cy2~=b.cy then
  local click=true
  -- swap gems before moving cursor
  if b.selecting then
   b.selecting=false
   click=false
   local sg=b.grid[b.cy][b.cx]
   b.grid[b.cy][b.cx]=b.grid[cy2][cx2]
   b.grid[cy2][cx2]=sg
   -- revert if not a match
   if clear_matches()==0 then
    b.grid[cy2][cx2]=b.grid[b.cy][b.cx]
    b.grid[b.cy][b.cx]=sg
    sfx(s_cancel,0)
   end
  end
  b.cx=cx2
  b.cy=cy2
  if click then sfx(s_click,0) end
 end
end

